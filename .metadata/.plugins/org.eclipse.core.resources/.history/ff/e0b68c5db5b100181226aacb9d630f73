package com.capgemini.controller;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/displaydetails")
public class CreditCardDetailsServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

    public CreditCardDetailsServlet() {
        super();
       
    }


	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        response.setContentType("text/html");
		
		PrintWriter out= response.getWriter();
		String name=request.getParameter("EmployeeName");
		String mob=request.getParameter("MobileNumber");
		String num=request.getParameter("Card Number");
		String date=request.getParameter("Expiry Date");
		String cvv=request.getParameter("CVV");
		out.println("<h1>Employee Name: "+name+ "Mobile Number: "+mob+ "Card Number: "+num+"Expiry Date: "+date+"CVV: "+cvv);
		out.println("<a href='creditCard.html'>Next User</a></h1>");
	}

}
